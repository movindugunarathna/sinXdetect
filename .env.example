# Environment Configuration Template for sinXdetect
# Copy this file to .env and fill in the values
#
# Environment Options:
#   - Development (local): Use docker-compose.dev.yml or docker-compose.yml
#   - Production: Use docker-compose.prod.yml

# ============================================
# Backend Configuration
# ============================================

# Path to the ML model directory (relative to ml/models/)
MODEL_PATH=/app/ml/models/sinbert_sinhala_classifier

# Python configuration
PYTHONUNBUFFERED=1

# Debug mode (set to 1 for development, 0 for production)
DEBUG=0

# ============================================
# Frontend Configuration
# ============================================

# API URL for the frontend to connect to the backend
# Development (with hot-reload): http://localhost:8000
# Development (combined):        http://localhost:3000/api
# Production:                    https://api.sinxdetect.movindu.com
VITE_API_URL=http://localhost:8000

# ============================================
# Production URLs (for reference)
# ============================================
# FRONTEND_URL=https://sinxdetect.movindu.com
# BACKEND_API_URL=https://api.sinxdetect.movindu.com

# ============================================
# Docker Configuration
# ============================================

# Backend port mapping (host:container)
BACKEND_PORT=8000

# Frontend port mapping (host:container)
FRONTEND_PORT=3000

# Development frontend port (when using docker-compose.dev.yml)
DEV_FRONTEND_PORT=5173
